<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".chat.Message_Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <ImageButton
            android:id="@+id/back_imgbutton"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:background="#000000"
            android:scaleY="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="120dp"
            android:layout_height="61dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="채팅"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_toRightOf="@id/back_imgbutton"
            app:layout_constraintStart_toEndOf="@+id/back_imgbutton"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_weight="0.1"
  >


        <ImageButton
            android:layout_alignParentBottom="true"
            android:id="@+id/chat_add_file_btn"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:srcCompat="@drawable/plus_icon" />
    <EditText
        android:id="@+id/chat_add_edit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
       android:layout_marginTop="2dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="채팅을 적어주세요."
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/chat_add_file_btn"
        android:layout_toLeftOf="@+id/chat_send_btn"
        />



        <ImageButton
            android:id="@+id/chat_send_btn"
            android:layout_width="48dp"
            android:layout_height="40dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/send_icon" />

</LinearLayout>


</LinearLayout>