<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#000000"
    android:layout_height="70dp">


    <ImageView
        android:id="@+id/chatroomitem_img"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatroomitem_txt_title"
            android:text="방 이름"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/chatroom_txt_lastmessase"
            android:text="마지막 메세지"
            android:textColor="#C0C0C0"
            android:layout_below="@+id/chatroomitem_txt_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/chatroom_txt_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text="2011.11.11 11:11"
            android:layout_width="wrap_content"
            android:textColor="#C0C0C0"
            android:textSize="10dp"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>
    


</LinearLayout>
